@model IEnumerable<VehicleRegisterSystem.Application.DTOs.OrderDto>

<h2>طلبات السيارات قيد الإجراء</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>اسم السيارة</th>
            <th>الموديل</th>
            <th>رقم المحرك</th>
            <th>حالة الطلب</th>
            <th>إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CarName</td>
                <td>@order.Model</td>
                <td>@order.EngineNumber</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="RegisterBoard" asp-route-id="@order.Id" class="btn btn-primary">تسجيل اللوحة</a>
                </td>
            </tr>
        }
    </tbody>
</table>
