@model IEnumerable<VehicleRegisterSystem.Application.DTOs.OrderDto>
@{
    ViewData["Title"] = "الطلبات التي تم الموافقة عليها";
}

<h2>الطلبات التي تم الموافقة عليها</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>رقم الطلب</th>
            <th>اسم مقدم الطلب</th>
            <th>رقم وطني</th>
            <th>اسم الأم</th>
            <th>اسم السيارة</th>
            <th>موديل</th>
            <th>سنة الصنع</th>
            <th>لون</th>
            <th>رقم المحرك</th>
            <th>رقم اللوحة</th>
            <th>تاريخ إنشاء الطلب</th>
            <th>الحالة</th>
            <th>تاريخ آخر تعديل</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.FullName</td>
                <td>@order.NationalNumber</td>
                <td>@order.MotherName</td>
                <td>@order.CarName</td>
                <td>@order.Model</td>
                <td>@order.YearOfManufacture</td>
                <td>@order.Color</td>
                <td>@order.EngineNumber</td>
                <td>@order.BoardNumber</td>
                <td>@order.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@order.Status</td>
                <td>@(order.ModifiedAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
            </tr>
        }
    </tbody>
</table>
