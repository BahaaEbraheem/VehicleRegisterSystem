@model VehicleRegisterSystem.Application.DTOs.AuthenticationDTOs.UserViewModel

@{
    ViewData["Title"] = "تفاصيل المستخدم - User Details";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <tr><th>الاسم الكامل</th><td>@Model.FullName</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
    <tr><th>Phone</th><td>@Model.PhoneNumber</td></tr>
    <tr><th>Role</th><td>@Model.Role</td></tr>
    <tr><th>Membership Date</th><td>@Model.MembershipDate?.ToString("yyyy-MM-dd")</td></tr>
    <tr><th>Active</th><td>@(Model.IsActive ? "نشيط" : "غير نشيط")</td></tr>
</table>

<a asp-action="Index" class="btn btn-secondary">عودة - Back</a>
