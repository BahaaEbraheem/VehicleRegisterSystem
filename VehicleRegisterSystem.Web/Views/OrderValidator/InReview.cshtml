@model IEnumerable<VehicleRegisterSystem.Application.DTOs.OrderDto>
@{
    ViewData["Title"] = "الطلبات قيد التحقق";
}

<h2>الطلبات قيد التحقق</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>رقم الطلب</th>
            <th>اسم مقدم الطلب</th>
            <th>اسم السيارة</th>
            <th>موديل</th>
            <th>سنة الصنع</th>
            <th>رقم المحرك</th>
            <th>تاريخ الطلب</th>
            <th>الحالة</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.FullName</td>
                <td>@order.CarName</td>
                <td>@order.Model</td>
                <td>@order.YearOfManufacture</td>
                <td>@order.EngineNumber</td>
                <td>@order.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>
